.container {
  background-color: #f3f5f9;
}
.service {
  margin: 0 24rpx 15rpx;
}
.service-wrap {
  flex-wrap: wrap;
}
.service-item {
  width: 328rpx;
  height: 160rpx;
  border-radius: 6rpx;
  background-size: 96rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  text-align: center;
  line-height: 160rpx;
  margin-bottom: 32rpx;
}
.service-item__disable {
  position: relative;
}
.service-item__disable::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2;
  border-radius: 6rpx;
}
